@model  SalesWebMvc.Models.Vendedor

@{
    ViewData["Title"] = "Deletar";
}

<h2>Deletar</h2>

<hr />

<div class="alert alert-dismissible alert-warning">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4 class="alert-heading">Cuidado!</h4>
    <p class="mb-0">Certeza que deseja deletar este vendedor?</p>
</div>

<dl class="dl-horizontal">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.nome)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.nome)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.email)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.email)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.nascimento)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.nascimento)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.salariobase)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.salariobase)
    </dd>
</dl>

<form asp-action="Deletar">
    <input type="hidden" asp-for="id" />
    <button type="submit" class="btn btn-danger" asp-action="Deletar">Deletar</button>
    <a asp-action="Index">Voltar</a>
</form>

